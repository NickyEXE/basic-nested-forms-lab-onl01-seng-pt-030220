<%= form_for @recipe do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.fields_for :ingredients do |f2| %>
        <%= f2.label :name %><br>
        <%= f2.text_field :name %><br>
        <%= f2.label :quantity %><br>
        <%= f2.number_field :quantity %><br><br>
    <% end %>
    <%= f.submit %>
<%end  %>
