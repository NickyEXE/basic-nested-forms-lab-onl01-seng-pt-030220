<%= form_for @recipe do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.fields_for :ingredients do |fb| %>
        <%= fb.label :name %><br>
        <%= fb.text_field :name %><br>
        <%= fb.label :quantity %><br>
        <%= fb.number_field :quantity %><br>
    <% end%>
    <%= f.submit %>
<% end %>
